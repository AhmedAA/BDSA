<Window x:Class="NorthWind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="583.532" Width="694.103">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="535" Margin="10,10,0,0" VerticalAlignment="Top" Width="668">
            <TabItem Header="Products">
                <Grid Background="#FFE5E5E5">
                    <DataGrid Name="ProductGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Height="260" Width="363" ItemsSource="{Binding}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Orders">
                <Grid Background="#FFE5E5E5" Margin="0,0,-72.6,-206.6">
                    <DataGrid Name="OrderGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Height="467" Width="647" ItemsSource="{Binding}" Margin="0,0,-192,0"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Button Content="Create New Order" HorizontalAlignment="Left" Margin="553,10,0,0" VerticalAlignment="Top" Width="106" Click="Button_Click" Height="21"/>

    </Grid>
</Window>
