<Window x:Class="NorthWind.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Top orders by total price" Height="454" Width="619" WindowStartupLocation="CenterScreen" SizeToContent="Width">
    <Window.Resources>
        <DataTemplate x:Key="TopOrdersByTotalPriceTemplate">
            <DataGrid x:Name="ReportDataGrid" ScrollViewer.CanContentScroll="True" IsReadOnly="True" Margin="0,0,0,0" ItemsSource="{Binding Path=Data}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Label Content="Top orders by total price" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <ScrollViewer Margin="10,57,10,69" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"><ItemsControl x:Name="ItemsControl"/></ScrollViewer>
        <Button x:Name="ButtonClose" Content="Close" Margin="10,0,10,10" FontSize="18" Click="CloseClicked" Height="54" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
