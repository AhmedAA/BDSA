<Window x:Class="NorthWind.InputNumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputNumberWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="LabelInputNumberTitle" Content="InputNumberTitle" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <TextBox x:Name="InputNumberBox" HorizontalAlignment="Left" Height="23" Margin="10,99,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="272"/>
        <Label x:Name="LabelInputNumberBoxLabel" Content="InputNumberBoxLabel" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ButtonOk" Content="Ok" Margin="157,0,10,10" VerticalAlignment="Bottom" Height="60" FontSize="18" Click="OkClicked"/>
        <Button x:Name="ButtonCancel" Content="Cancel" Margin="10,0,157,10" VerticalAlignment="Bottom" Height="60" FontSize="18" Click="CancelClicked"/>
    </Grid>
</Window>
